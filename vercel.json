{
  "version": 2,
  "installCommand": "pnpm install --recursive",
  "builds": [
    { "src": "frontend/package.json", "use": "@vercel/next", "config": { "distDir": "build" } },
    { "src": "backend-project/dist/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend-project/dist/$1.js" },
    { "src": "/(.*)", "dest": "frontend/build/$1" }
  ]
}
